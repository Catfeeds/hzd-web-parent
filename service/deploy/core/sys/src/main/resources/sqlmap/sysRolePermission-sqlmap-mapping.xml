<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.exiao.platform.core.sys.data.SysRolePermission">
    <!--  
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache" readOnly="true" />
	-->
	<resultMap id="BaseResultMap" type="com.exiao.platform.core.sys.data.SysRolePermission">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="permission_id" property="permissionId" jdbcType="INTEGER" />
		<result column="role_id" property="roleId" jdbcType="INTEGER" />
		
	</resultMap>
	
	<sql id="Base_Column_List">
		id as id,
		permission_id as permissionId,
		role_id as roleId
		
	</sql>
	
	
	<sql id="Base_Where_Clause">
		<where>
			<trim prefixOverrides="and">
				<if test="id != null"> and id = #{id}</if>
				<if test="roleId != null"> and role_id = #{roleId}</if>
				<if test="permissionId != null"> and permission_id = #{permissionId}</if>
			
			</trim>
		</where>
		
	</sql>
	
	<!-- 查询总数 -->
	<select id="selectCount" resultType="java.lang.Long" parameterType="java.util.Map">
		select count(id)
		from sys_role_permission
		<include refid="Base_Where_Clause" />
	</select>
	
	<!-- 查询 -->
	<select id="select" resultMap="BaseResultMap" parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from sys_role_permission
		<include refid="Base_Where_Clause" />
	</select>
	
	<select id="selectByRoleIdList" resultMap="BaseResultMap" parameterType="long">
		select
		<include refid="Base_Column_List" />
		from sys_role_permission
		WHERE role_id = #{roleId}
	</select>
	
	<select id="queryById" resultMap="BaseResultMap" parameterType="int">
		SELECT
		id ,
		permission_id ,
		role_id 
		FROM sys_role_permission 
		WHERE id = #{id}
	</select>
	
	<select id="getAll" resultMap="BaseResultMap">
		SELECT
        id ,
		permission_id ,
		role_id 
		
		FROM sys_role_permission
	</select>
	
	<!-- 根据ID查询 -->
	<select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from sys_role_permission
		where id = #{id}
	</select>
	
	<!-- 根据ID删除 -->
	<delete id="deleteByIds" parameterType="java.util.List">
		delete from sys_role_permission
		where id IN
		 <foreach collection="list" item="idList"  open="(" separator="," close=")">  
        	#{idList}  
     	</foreach>  
	</delete> 
	<delete id="deleteById" parameterType="Long">
		delete from sys_role_permission
		where id = #{id} 
	
	</delete> 
	<!-- 删除 -->
	<delete id="delete" parameterType="java.util.Map">
		delete from sys_role_permission
		<include refid="Base_Where_Clause" />
	</delete>

	<!-- 添加 -->	
	<insert id="insert" useGeneratedKeys="true" keyProperty="id"  parameterType="com.exiao.platform.core.sys.data.SysRolePermission">
		insert into sys_role_permission(
		   id ,
		   permission_id ,                                                                                                                                  
		   role_id 
		) 
		values (
			#{id},                                                                     
			#{permissionId},
			#{roleId}
		)
	</insert>

	

	
	<select id="FINDLIST" resultMap="BaseResultMap">
        select * from sys_role_permission
        <include refid="Base_Where_Clause" />
		order by role_id asc
		limit #{pageNo}, #{pageSize}
    </select>
    
    <select id="FINDLIST_COUNT" resultType="int"  parameterType="java.util.Map">
    
        select count(id) from sys_role_permission
       <include refid="Base_Where_Clause" />
    </select>
	

</mapper>


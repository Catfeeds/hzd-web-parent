<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.hzcf.platform.core.sys.data.SysUserRole">

	<!--  
	<cache type="org.mybatis.caches.ehcache.LoggingEhcache" readOnly="true" />
	-->	
	<resultMap id="BaseResultMap" type="com.hzcf.platform.core.sys.data.SysUserRole">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="user_id" property="userId" jdbcType="INTEGER" />
		<result column="role_id" property="roleId" jdbcType="INTEGER" />
		
	</resultMap>
	
	<sql id="Base_Column_List">
		id as id,
		user_id as userId,
		role_id as roleId
		
	</sql>
	
	
	<sql id="Base_Where_Clause">
		<where>
			<trim prefixOverrides="and">
				<if test="id != null"> and id = #{id}</if>
				<if test="userId != null"> and user_id = #{userId}</if>
			
			</trim>
		</where>
		
	</sql>
	
	<!-- 查询总数 -->
	<select id="selectCount" resultType="java.lang.Long" parameterType="java.util.Map">
		select count(id)
		from sys_user_role
		<include refid="Base_Where_Clause" />
	</select>
	
	<!-- 查询 -->
	<select id="select" resultMap="BaseResultMap" parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from sys_user_role
		<include refid="Base_Where_Clause" />
	</select>
	
	<select id="queryById" resultMap="BaseResultMap" parameterType="int">
		SELECT
		id ,
		user_id ,
		role_id 
		FROM sys_user_role 
		WHERE id = #{id}
	</select>
	
	
	<select id="queryByUserId" resultMap="BaseResultMap" parameterType="long">
		SELECT
		id ,
		user_id ,
		role_id 
		FROM sys_user_role 
		WHERE user_id = #{userId}
	</select>
	
	<select id="getAll" resultMap="BaseResultMap">
		SELECT
        id ,
		user_id ,
		role_id 
		
		FROM sys_user_role
	</select>
	
	<!-- 根据ID查询 -->
	<select id="selectById" resultMap="BaseResultMap" parameterType="long">
		select
		<include refid="Base_Column_List" />
		from sys_user_role
		where id = #{id}
	</select>
	
	<!-- 根据ID删除 -->
	<delete id="deleteById" parameterType="java.util.List">
		delete from sys_user_role
		where id = #{id} 
		<!-- <foreach collection="list" item="idList"  open="(" separator="," close=")">  
        	#{idList}  
     	</foreach>   -->
	</delete> 
	
	<!-- 删除 -->
	<delete id="delete" parameterType="java.util.Map">
		delete from sys_user_role
		<include refid="Base_Where_Clause" />
	</delete>

	<!-- 添加 -->	
	<insert id="insert" useGeneratedKeys="true" keyProperty="id"  parameterType="com.hzcf.platform.core.sys.data.SysUserRole">
		insert into sys_user_role(
		   id ,
		   user_id ,
		   role_id
		 
		)
		values (
			#{id}, 
			#{userId},
			#{roleId}
			
		)
	</insert>
<!-- 通过ID更新 -->
	<update id="updateByIdSelective" parameterType="com.hzcf.platform.core.sys.data.User">
		update sys_user_role
		<set>
			<if test="userId != null">user_id = #{userId},</if>
			<if test="roleId != null">role_id = #{roleId},</if>
			
		</set>
		where id = #{id}
	</update>
	
	<update id="updateById" parameterType="com.hzcf.platform.core.sys.data.User">
		update sys_user_role
		set user_id = #{userId},
		role_id=#{roleId}
		where id = #{id}
	</update>
	
	

	
	<select id="FINDLIST" resultMap="BaseResultMap">
        select * from sys_user_role
        <include refid="Base_Where_Clause" />
		order by id desc
		limit #{pageNo}, #{pageSize}
    </select>
    
    <select id="FINDLIST_COUNT" resultType="int"  parameterType="java.util.Map">
    
        select count(id) from sys_user_role
       <include refid="Base_Where_Clause" />
    </select>
	

</mapper>


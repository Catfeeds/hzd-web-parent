<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans        
    http://www.springframework.org/schema/beans/spring-beans.xsd        
    http://code.alibabatech.com/schema/dubbo        
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	<!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="core-sys-service" logger="slf4j"/> 
 
    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <!--<dubbo:registry address="multicast://224.5.6.7:2234" />-->
      
   
 	<!-- 使用zookeeper注册中心暴露服务地址 -->
	<dubbo:registry address="zookeeper://127.0.0.1:2181" check="false" />
    <!--<dubbo:registry protocol= "zookeeper" address="dubbo-zk1.exiao.me:2181,dubbo-zk2.exiao.me:2181,dubbo-zk3.exiao.me:2181"/>-->    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20881" />
 
    <!-- 和本地bean一样实现服务 -->
    <bean id="roleService" class="com.exiao.platform.core.sys.service.impl.RoleServiceImpl" />
    <bean id="userService" class="com.exiao.platform.core.sys.service.impl.UserServiceImpl" /> 
    <bean id="sysLogService" class="com.exiao.platform.core.sys.service.impl.SysLogServiceImpl" />  
    <bean id="metaElementService" class="com.exiao.platform.core.sys.service.impl.MetaElementServiceImpl" />
    <bean id="permissionService" class="com.exiao.platform.core.sys.service.impl.PermissionServiceImpl" />
    <bean id="sysRolePermissionService" class="com.exiao.platform.core.sys.service.impl.SysRolePermissionServiceImpl" />
    <bean id="departmentService" class="com.exiao.platform.core.sys.service.impl.DepartmentServiceImpl" />  
    <bean id="areaService" class="com.exiao.platform.core.sys.service.impl.AreaServiceImpl" />
    <bean id="scheduleJobService" class="com.exiao.platform.core.sys.service.impl.ScheduleJobServiceImpl" />
    <!-- 集成shiro使用 -->
        
    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.exiao.platform.core.sys.service.RoleService" ref="roleService" />
    <dubbo:service interface="com.exiao.platform.core.sys.service.UserService" ref="userService" />
    <dubbo:service interface="com.exiao.platform.core.sys.service.SysLogService" ref="sysLogService" />
    <dubbo:service interface="com.exiao.platform.core.sys.service.MetaElementService" ref="metaElementService" />
    <dubbo:service interface="com.exiao.platform.core.sys.service.PermissionService" ref="permissionService" />
    <dubbo:service interface="com.exiao.platform.core.sys.service.SysRolePermissionService" ref="sysRolePermissionService" />
    <dubbo:service interface="com.exiao.platform.core.sys.service.DepartmentService" ref="departmentService" />
    <dubbo:service interface="com.exiao.platform.core.sys.service.AreaService" ref="areaService" />
    <dubbo:service interface="com.exiao.platform.core.sys.service.ScheduleJobService" ref="scheduleJobService" />
    
</beans>
